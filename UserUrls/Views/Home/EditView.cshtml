@model UrlViewModel;

@{
    Layout = null;
}

<div id="urlToEdit" class="hide">@Model.Id</div>
<div class="form-group">
    <label for="url">Url:</label>
    <input type="text" name="url" class="form-control" value="@Model.Url" />
</div>
<div>
    <label for="content">Content</label>
    @{
        string result = "";
        foreach (string s in @Model.Content)
        {
            result += s + "\n";
        }
        result = result.Substring(0, result.Length - 1);
    }
    <textarea name="content" class="form-control" rows="8">@result</textarea>
</div>
<div id="errorField" class="hide">
    Please fill all fields to continue
</div>
<div class="btn btn-primary" id="saveUrl">
    Save
</div>